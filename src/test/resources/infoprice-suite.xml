<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="infoprice-suite">

    <parameter name="jenkinsJobName" value="InfopriceTest"/>
    <parameter name="jenkinsJobType" value="web"/>
    <parameter name="jenkinsEnvironments" value="DEMO"/>

    <test name="chrome-test" parallel="methods" thread-count="2">
        <parameter name="browserName" value="chrome"/>
        <classes>
            <class name="com.solvd.infopricetesting.InfopriceTest">
                <methods>
                    <include name="checkReturnFromBasketPageToHomePageTest"/>
                    <include name="checkOpenFilterMenuTest"/>
                    <include name="checkCloseFilterMenuTest"/>
                    <include name="checkOptionAllShopsTest"/>
                    <include name="checkCloseButtonLocationTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="firefox-test" parallel="methods" thread-count="2">
        <parameter name="browserName" value="firefox"/>
        <classes>
            <class name="com.solvd.infopricetesting.InfopriceTest">
                <methods>
                    <include name="checkFilterMenuLocationTest"/>
                    <include name="checkReturnFromBasketPageToHomePageTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>